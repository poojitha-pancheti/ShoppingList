@page
@model ShoppingList.Pages.Shopping.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Shopping List</h1>

<h4>Add Items</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="List.Item" class="control-label"></label>
                <input asp-for="List.Item" class="form-control" />
                <span asp-validation-for="List.Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
